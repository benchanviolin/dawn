.modal-sub { display: none; }
.modal-sub--show,
.modal-sub--hide {
  display: flex;
  justify-content: center;
} /* classes fired by js for animation control */

/* This is on the wrapper for the whole modal */
.modal-sub--align {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(255, 255, 255, 0.91);
  z-index: 999;
}

.modal-sub__container {
  position: relative;
  width: 100%;
  max-width: 600px;
  max-height: calc(100vh - 55px);
  padding: 20px;
  margin: 50px 25px 25px;
  background: #fff;
  border-radius: 5px;
  box-shadow: 0 2px 7px 0 rgba(0 0 0 / 15%);
}

.modal-sub__container p {
  text-align: center;
  line-height: 1.45;
}

/* The .modal__close class is used in js but is modified '--x' here */
.modal-sub__close--x {
  font-size: 30px; /* this is only because we use unicode for the X in this case */
  position: absolute;
  top: 3px;
  right: 10px;
}

/* As there is no href to avoid the hash being added to the URL when clicked we add a pointer */
/* This 'x' is hidden from screen readers as there is an accessible close button in the modal */
.modal-sub__close--x:hover {
  cursor: pointer;
}

/* Animations */
/* Open */
.modal-sub.modal-sub--show {
  animation: modal-open 0.3s;
}

@keyframes modal-sub-open {
  0%    { opacity: 0; }
  100%  { opacity: 1; }
}

/* Close */
.modal-sub.modal-sub--hide {
  animation: modal-sub-close 0.3s;
}

@keyframes modal-sub-close {
  0%    { opacity: 1; }
  100%  { opacity: 0; }
}

