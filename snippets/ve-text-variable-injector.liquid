{%- assign veText = veText | replace: "|csr_phone|", settings.csr_phone -%}
{%- assign veText = veText | replace: "|csr_hours|", settings.csr_hours -%}
{%- assign veText = veText | replace: "|min_price_free_shipping|", settings.min_price_free_shipping -%}
{%- if veText contains "|min_price_free_shipping_money|" %}
  {%- assign minPriceFreeShippingMoney = settings.min_price_free_shipping | times: 100 | money_without_currency -%}
  {%- assign veText = veText | replace: "|min_price_free_shipping_money|", minPriceFreeShippingMoney -%}
{%- endif -%}
{%- assign veText = veText | replace: "|price_shipping_usa|", settings.price_shipping_usa -%}
