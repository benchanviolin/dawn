{%- assign veText = veText | replace: "|price_shipping_international|", settings.price_shipping_international -%}
{%- assign veText = veText | replace: "|time_shipping_processing|", settings.time_shipping_processing -%}
{%- assign veText = veText | replace: "|time_shipping_usa_canada|", settings.time_shipping_usa_canada -%}
{%- assign veText = veText | replace: "|time_shipping_usa|", settings.time_shipping_usa -%}
{%- assign veText = veText | replace: "|time_shipping_canada|", settings.time_shipping_canada -%}
{%- assign veText = veText | replace: "|time_shipping_international|", settings.time_shipping_international -%}
{%- assign veText = veText | replace: "|time_shipping_return_window|", settings.time_shipping_return_window -%}

{%- if veEscape -%}
  {{ veText | escape }}
{%- else -%}
  {{ veText }}
{%- endif -%}
