// Modal - JS

function modal_sub() {

  var modal = document.getElementsByClassName('modal-sub')[0],
      trigger = document.getElementsByClassName('modal-sub-trigger')[0],
      close = document.getElementsByClassName('modal-sub__close'); // we loops this to catch the different closers

  closeModal_sub = function() {
    modal.classList.remove('modal-sub--show');
    modal.classList.add('modal-sub--hide');
    // Remove hide class after animation is done
    afterAnimation = function() {
      modal.classList.remove('modal-sub--hide');
    }
    // This listens for the CSS animations to finish and then hides the modal
    modal.addEventListener("webkitAnimationEnd", afterAnimation, false);
    modal.addEventListener("oAnimationEnd", afterAnimation, false);
    modal.addEventListener("msAnimationEnd", afterAnimation, false);
    modal.addEventListener("animationend", afterAnimation, false);
  }

  // Open the modal
  trigger.onclick = function() {
    modal.classList.add('modal-sub--show');
  }

  // Close the modal with any element with class 'modal__close'
  for (var i=0; i < close.length; i++) {
    close[i].onclick = function() {
      closeModal_sub();
    }
  }

  // Click outside of the modal and close it
  window.onclick = function(e) {
    if (e.target == modal) {
      closeModal_sub();
    }
  }

  // Use the escape key to close modal
  document.onkeyup = function(e) {
    e = e || window.event;
    if(modal.classList.contains('modal-sub--show')) {
      if(e.keyCode == 27) {
        closeModal_sub();
      }
    }
  }

}
modal_sub();
